# ==========================================================================
# Postiz Environment Configuration
# Copy to postiz.env and fill in your values
# ==========================================================================

# ---- Core URLs ----
MAIN_URL=https://postiz.crunchtools.com
FRONTEND_URL=https://postiz.crunchtools.com
NEXT_PUBLIC_BACKEND_URL=https://postiz.crunchtools.com/api
BACKEND_INTERNAL_URL=http://localhost:3000

# ---- Secrets ----
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING

# ---- Database (internal to container) ----
DATABASE_URL=postgresql://postgres@127.0.0.1:5432/postiz
REDIS_URL=redis://127.0.0.1:6379

# ---- Temporal (internal to container) ----
TEMPORAL_ADDRESS=127.0.0.1:7233

# ---- Storage ----
STORAGE_PROVIDER=local
UPLOAD_DIRECTORY=/uploads
NEXT_PUBLIC_UPLOAD_DIRECTORY=/uploads

# ---- App Settings ----
IS_GENERAL=true
DISABLE_REGISTRATION=true
NX_ADD_PLUGINS=false

